<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    >

    <TextView
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:maxLines="2"
        android:ellipsize="none"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:lineSpacingExtra="4dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/useremail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="none"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />


    <!-- Sidebar Setting Button -->
    <ImageButton
        android:id="@+id/sidebar_setting"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Settings"
        android:scaleType="fitCenter"
        android:src="@drawable/sidebar_setting"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/useremail"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Chat Icon -->
    <ImageButton
        android:id="@+id/chat_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Chat"
        android:scaleType="fitCenter"
        android:src="@drawable/chat_icon"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/sidebar_setting"
        app:layout_constraintStart_toEndOf="@+id/sidebar_setting" />

    <!-- SP Icon -->
    <ImageButton
        android:id="@+id/sp_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="SP"
        android:scaleType="fitCenter"
        android:src="@drawable/sp_icon"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/chat_icon"
        app:layout_constraintStart_toEndOf="@+id/chat_icon" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/requestRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/sp_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/logout"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Logout"
        android:scaleType="fitCenter"
        android:src="@drawable/logout"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
